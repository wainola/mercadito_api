{
  "name": "MercaditoApi",
  "version": "1.0.0",
  "description": "Api for Mercadito de Larmahue",
  "main": "server.js",
  "scripts": {
    "test": "./node_modules/.bin/mocha test",
    "clean": "rimraf build",
    "build": "babel src -d dist --presets es2015,stage-2",
    "serve": "node dist/server.js",
    "serve-build": "babel src -d dist --presets es2015,stage-2 && node dist/server.js",
    "lint": "eslint src/",
    "deploy": "npm run build",
    "start": "nf start",
    "dev": "better-npm-run dev",
    "debug": "node --debug ./build/server.js",
    "postinstall": "npm run deploy"
  },
  "betterScripts": {
    "build": {
      "command": "npm run clean && ./node_modules/.bin/babel -d ./build src -s",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "dev": {
      "command": "nodemon --exec ./node_modules/.bin/babel-node --presets=es2015,stage-0 -- src/server.js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "deploy": {
      "command": "npm run build",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "github@url"
  },
  "author": {
    "name": "Marcello Tavano",
    "email": "marcello@lobulomedia.com",
    "website": "https://github.com/mtavano"
  },
  "license": "ISC",
  "bugs": {
    "url": "null"
  },
  "dependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.6.5",
    "babel-plugin-syntax-trailing-function-commas": "^6.5.0",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-polyfill": "^6.7.2",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.6.1",
    "bcrypt": "^3.0.0",
    "better-npm-run": "0.1.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "morgan": "^1.9.0",
    "npm": "^6.2.0",
    "pg": "^7.4.3",
    "ramda": "^0.25.0",
    "rimraf": "^2.5.2",
    "signale": "^1.1.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "eslint": "^5.2.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.9.1",
    "supertest": "^3.1.0"
  },
  "engines": {
    "node": "8.1.1"
  }
}
